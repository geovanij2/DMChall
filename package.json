{
  "name": "challenge",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "",
  "author": "Geovani da Silva Junior",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist && rm -rf node_modules",
    "test": "mocha --exit --timeout 10000 dist/test",
    "start": "yarn run build && yarn run watch",
    "debug": "yarn run build && yarn run watch-debug",
    "build": "yarn run build-ts",
    "build-ts": "yarn run tsc",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run serve\"",
    "watch-ts": "tsc -w",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run serve-debug\"",
    "serve": "nodemon --delay 5 dist/src/index.js",
    "serve-debug": "nodemon --inspect dist/src/index.js",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint-fix": "tslint -c tslint.json -p tsconfig.json --fix"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/chai": "^4.1.7",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.1",
    "@types/lodash": "^4.14.123",
    "@types/morgan": "^1.7.35",
    "@types/node": "^11.11.3",
    "@types/pg": "^7.4.14",
    "@types/winston": "^2.4.4",
    "c8": "^3.4.0",
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.10",
    "tslint": "^5.14.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@types/mocha": "^5.2.6",
    "axios": "^0.18.0",
    "chai": "^4.2.0",
    "cors": "^2.8.5",
    "dotenv-safe": "^6.1.0",
    "express": "^4.16.4",
    "express-promise-router": "^3.0.3",
    "fp-ts": "^2.8.3",
    "lodash": "^4.17.11",
    "mocha": "^6.0.2",
    "morgan": "^1.9.1"
  }
}
